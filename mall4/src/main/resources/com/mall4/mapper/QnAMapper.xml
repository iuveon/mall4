<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
PUBLIC "-//mybatis.org//DTO Mapper 3.0//EN"
"https://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.mall4.mapper.QnAMapper">
  <select id="getList" resultType="com.mall4.domain.QnAVO">
   select * from QnA_board
  </select>
  
  <insert id="insert">
  insert into QnA_board (b_num, b_item, b_title, b_writer)
  values (seq_board_num.nextVal, #{b_item}, #{b_title}, #{b_writer})
  </insert>
  
  <!-- <insert id="insertSelectKey">
     <selectKey keyProperty="b_num" order="BEFORE" resultType="long">
       select seq_board_num.nextval from dual
     </selectKey>
     insert into QnA_board (b_num, b_item, b_title, b_writer)
  values (seq_board_num.nextval, #{b_item}, #{b_title}, #{b_writer})
     
  
  </insert>
   -->
  
  <select id="read" resultType="com.mall4.domain.QnAVO">
    select * from QnA_board where b_num = #{b_num}
  </select>
  
  <delete id="delete">
   delete from QnA_board where b_num= #{b_num}
  </delete>
  
  <update id="update">
    update QnA_board set b_item=#{b_item}, b_title=#{b_title}, b_writer=#{b_writer}, b_regdate = sysdate
    where b_num = #{b_num}
  </update>
  
  
  
</mapper>